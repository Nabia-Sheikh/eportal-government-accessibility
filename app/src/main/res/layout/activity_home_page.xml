<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF9F9"
    android:orientation="vertical"
    android:scrollbarStyle="insideInset"
    tools:context=".HomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/homepage"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:text="Name :"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/user"
                android:gravity="start"
                android:paddingLeft="2dp"
                android:paddingTop="20dp"
                android:textColor="@color/white"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user"
                android:paddingLeft="20dp"
                android:text="Phone Number :"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/userphoneNumber"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:text="123456"
                android:textColor="@color/white"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/personalInfo"
                android:layout_width="151dp"
                android:layout_height="135dp"
                android:backgroundTint="@color/white"
                android:elevation="20dp"
                android:padding="10dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/personalInf"
                    android:layout_width="104dp"
                    android:layout_height="97dp"
                    android:layout_margin="20dp"
                    android:padding="20dp"
                    android:src="@mipmap/personal" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/hospitals"
                android:layout_width="151dp"
                android:layout_height="135dp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/white"
                android:elevation="20dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/seeResul"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:padding="20dp"
                    android:src="@mipmap/locationpng"></ImageView>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:text="Personal Information "
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="See Map"
                android:textColor="@color/black"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/hellosarkar"
                android:layout_width="151dp"
                android:layout_height="135dp"
                android:backgroundTint="@color/white"
                android:elevation="20dp"
                android:onClick="citizenPortal"
                android:padding="10dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/hellosarka"
                    android:layout_width="109dp"
                    android:layout_height="102dp"
                    android:layout_margin="20dp"
                    android:padding="20dp"
                    android:src="@mipmap/citizen" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/temp"
                android:layout_width="151dp"
                android:layout_height="135dp"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:backgroundTint="@color/white"
                android:elevation="20dp"
                app:cardUseCompatPadding="true"
                android:onClick="taxpay"
                >

                <ImageView
                    android:id="@+id/tem"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:padding="20dp"
                    android:src="@mipmap/fbr"></ImageView>


            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Citizen Portal"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:text="Taxpayer Portal"
                android:textColor="@color/black"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Police"
                android:layout_width="151dp"
                android:layout_height="135dp"
                android:backgroundTint="@color/white"
                android:elevation="20dp"
                android:padding="10dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/policecall"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:padding="20dp"
                    android:onClick="kwsb"
                    android:src="@mipmap/logo1" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tempthing"
                android:layout_width="151dp"
                android:layout_height="135dp"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:backgroundTint="@color/white"
                android:onClick="HEC"
                android:elevation="20dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/temthingishere"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:padding="20dp"
                    android:src="@mipmap/hec"></ImageView>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:text="KWSB"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="HEC"
                android:textColor="@color/black"
                android:textSize="14dp" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_rectangele"
        android:paddingTop="4dp"
        android:shadowRadius="10"
        android:onClick="signOutt"
        android:text="LOGOUT"
        android:textColor="@color/white" />


</LinearLayout>